<div class="container mt-4">
  <h2 class="text-center text-dark fw-bold">🍽 Restaurant Collection</h2>
  
  <p class="text-center text-dark">Discover and rate the best restaurants</p>

  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-4">
        <div class="card shadow-lg border-0 restaurant-card">
          
        <!-- Image Handling -->
        <% image_filename = case restaurant.name.downcase.strip
          when "mcdonalds"
            "mcdonalds.jpg"
          when "jollibee"
            "jollibee.png"
          else
            "default_restaurant.jpg"
        end %>

        <%= image_tag "restaurants/#{image_filename}", class: "card-img-top restaurant-image", alt: restaurant.name %>

          <div class="card-body text-center">
            <h4 class="fw-bold text-dark"><%= restaurant.name %></h4>
            <p class="text-muted"><i class="bi bi-geo-alt-fill"></i> <%= restaurant.location %></p>

            <h5 class="text-dark fw-semibold">
              <%= restaurant.average_rating %> ⭐ | <%= pluralize(restaurant.ratings.count, "rating") %>
            </h5>

            <a href="<%= restaurant_path(restaurant) %>" class="btn btn-outline-dark mt-2">View Details</a>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
