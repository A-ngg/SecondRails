<!DOCTYPE html>
<html>
<head>
  <title>Restaurant Rating</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" %>
  <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>

  <style>
    /* Custom Navbar */
    .navbar-custom {
      background: linear-gradient(135deg, #c0102d, #6a0d83); /* Gradient */
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);
      padding: 15px 0;
    }

    .navbar-brand {
      font-size: 22px;
      font-weight: bold;
      color: white !important;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .navbar-toggler {
      border: none;
    }

    .navbar-nav .nav-link {
      color: white !important;
      font-weight: 500;
      transition: color 0.3s ease-in-out;
    }

    .navbar-nav .nav-link:hover {
      color: #ffcc00 !important;
    }

    /* Stylish Buttons */
    .btn-custom {
      background-color: white;
      color: #c0102d;
      border-radius: 20px;
      padding: 8px 15px;
      font-weight: bold;
      transition: all 0.3s ease-in-out;
    }

    .btn-custom:hover {
      background-color: #ffcc00;
      color: white;
      transform: scale(1.05);
    }

    /* Main Container */
    .container {
      padding-top: 30px;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container">
      <a class="navbar-brand" href="<%= restaurants_path %>">üçΩÔ∏è Restaurant Rating</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <span class="nav-link">üë§ <%= current_user.email %></span>
            </li>
            <li class="nav-item">
              <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-custom ms-2", data: { turbo: false } %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "btn btn-custom me-2" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-light rounded-pill" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <%= yield %>
  </div>

</body>
</html>
